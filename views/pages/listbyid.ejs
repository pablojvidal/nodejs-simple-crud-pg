<!DOCTYPE html>
<html lang="en-US">
  <%- include ('../partials/head.ejs') %>
  <body>
    <!-- Main Container -->
    <div class="container">
      <!-- Navigation -->
      <header><%- include ('../partials/header') %></header>

      <!-- Parallax Section -->
      <section class="banner">
        <form
          class="form"
          role="form"
          autocomplete="off"
          action="/listbyid"
          method="post"
        >
          <div class="form-group row">
            <label class="col-lg-3 col-form-label form-control-label"
              >ID user:</label
            >
            <div class="col-lg-9">
              <input class="form-control" type="text" name="id" />
            </div>
          </div>
          <div class="form-group row">
            <div class="col-lg-12 text-center">
              <input
                type="submit"
                class="btn btn-primary"
                value="Obtain user by id"
              />
            </div>
          </div>
        </form>

        <% if(found == 'notfound'){ %>
        <p>User not found</p>
        <% } %> <% if(found == null){ %>
        <p></p>
        <% } %> <% if(found == 'found'){ %>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>First Name</th>
              <th>email</th>
            </tr>
          </thead>
          <tbody>
            <%table.forEach(function(entry) {%>
            <tr>
              <td><%=entry.firstname%></td>
              <td><%=entry.email%></td>
            </tr>
            <%});%>
          </tbody>
        </table>
        <% } %>
      </section>

      <%- include ('../partials/footer') %>
    </div>
    <!-- Main Container Ends -->
  </body>
</html>
